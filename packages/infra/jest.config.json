{
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/main/**/*.{js,ts,mjs,cjs}"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/main/ts/cli.ts",
    "fixtures",
    "target"
  ],
  "testMatch": [
    "<rootDir>/src/test/**/*.{js,ts,mjs,cjs}"
  ],
  "testPathIgnorePatterns": [
    "node_modules",
    "fixtures",
    "src/test/stub",
    "src/test/js/.+it\\.js"
  ],
  "moduleNameMapper": {
    "tsc-esm-fix-core": "tsc-esm-fix-core/target/es6/index.mjs"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node",
    "mjs",
    "cjs"
  ],
  "globals": {
    "ts-jest": {
      "useESM": true,
      "tsconfig": "<rootDir>/tsconfig.test.json"
    }
  }
}
