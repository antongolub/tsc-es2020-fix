{
  "name": "tsc-esm-fix",
  "version": "2.7.6",
  "publishConfig": {
    "access": "public"
  },
  "bin": "./src/main/js/cli.cjs",
  "description": "Make tsc-compiled `es2020/esnext` bundles compatible with esm/mjs requirements",
  "type": "module",
  "main": "./src/main/js/index.cjs",
  "exports": {
    "require": "./src/main/js/index.cjs",
    "import": "./src/main/js/index.mjs",
    "module": "./src/main/js/index.mjs"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "module": "target/bundle/tsc-esm-fix.mjs",
  "unpkg": "target/bundle/tsc-esm-fix.umd.js",
  "scripts": {
    "clean": "rimraf target typings flow-typed buildcache docs coverage buildstamp.json",
    "lint": "eslint src/**/*.{ts,js} scripts",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"scripts/**/*.js\" \"src/main/**/*.ts\" \"src/test/(js|ts)**/*.(t|j)s\"",
    "test": "npm-run-all -p -l test:unit test:depcheck",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules --experimental-json-modules' jest --config=jest.config.mjs --runInBand",
    "test:depcheck": "npm_config_yes=true npx -p depcheck -p @babel/parser@7.16.4 depcheck",
    "build": "npm-run-all -p -l build:ts build:bundle docs",
    "build:ts": "cpy ../core/src/main/ts/ target/ts/",
    "build:bundle": "cpy ../core/target/bundle target/bundle/",
    "docs": "cpy ../core/docs/ docs/",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "publish:beta": "npm publish --no-git-tag-version --tag beta",
    "publish:rc": "npm publish --no-git-tag-version --tag rc"
  },
  "dependencies": {
    "tsc-esm-fix-cli": "*",
    "tsc-esm-fix-core": "*"
  },
  "devDependencies": {
    "fs-extra": "^10.0.0",
    "tempy": "^2.0.0",
    "tsc-esm-fix-infra": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antongolub/tsc-esm-fix.git"
  },
  "keywords": [
    "tsc",
    "esm",
    "mjs",
    "es2020",
    "esnext",
    "tsc-esm-fix",
    "tsc-es2020-fix"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed",
    "buildstamp.json"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/tsc-esm-fix/issues"
  },
  "homepage": "https://github.com/antongolub/tsc-esm-fix/#readme"
}
