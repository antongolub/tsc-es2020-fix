{
  "name": "tsc-es2020-fix",
  "version": "2.3.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "tsc-es2020-fix": "./target/es6/cli.mjs"
  },
  "description": "Make tsc-compiled `es2020` bundles compatible with `\"type\": \"module\"` requirements",
  "type": "module",
  "exports": {
    "import": "./target/es6/index.mjs"
  },
  "engines": {
    "node": ">=14.8"
  },
  "source": "src/main/ts/index.ts",
  "main": "target/bundle/tsc-es2020-fix.js",
  "module": "target/bundle/tsc-es2020-fix.mjs",
  "unpkg": "target/bundle/tsc-es2020-fix.umd.js",
  "scripts": {
    "postinstall": "patch-package",
    "clean": "rimraf target typings flow-typed buildcache docs coverage buildstamp.json",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "npm-run-all -p -l lint test:unit test:depcheck test:depaudit",
    "test:unit": "jest --config=jest.config.json --runInBand",
    "test:deps": "npm-run-all -p -l test:depcheck test:depauditfix",
    "test:depcheck": "npm_config_yes=true npx depcheck --ignore-patterns fixtures --ignores tslib,@swissquote/crafty-preset-jest,@types/jest,@types/node,eslint-config-*",
    "test:depaudit": "yarn audit --groups=dependencies --level=moderate; [[ $? -ge 4 ]] && exit 1 || exit 0",
    "test:depauditfix": "npm_config_yes=true npx yarn-audit-fix --audit-level=moderate",
    "test:report": "yarn test && yarn push:report",
    "prebuild": "yarn clean && npm_config_yes=true npx buildstamp --git --out.path buildstamp.json",
    "build": "npm-run-all -p -l build:es6 build:ts build:bundle docs && yarn build:fix",
    "build:es6": "mkdirp target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cpy src/main/ts/ target/ts/",
    "build:bundle": "microbundle --tsconfig tsconfig.es6.json build src/main/ts/index.ts -o target/bundle",
    "build:fix": "node scripts/js/build-fix.js",
    "docs": "typedoc",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || exit 0",
    "push:report": "yarn coveralls:push",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && yarn test:deps && yarn build && yarn test",
    "updeps": "npm_config_yes=true npx npm-upgrade",
    "publish:beta": "npm publish --no-git-tag-version --tag beta",
    "publish:rc": "npm publish --no-git-tag-version --tag rc"
  },
  "resolutions": {
    "**/postcss": "^8.2.15"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.12",
    "fs-extra": "^10.0.0",
    "globby": "^12.0.0",
    "meow": "^10.1.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@qiwi/npm-run-all": "^4.1.7",
    "@swissquote/crafty-preset-jest": "^1.15.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.4.13",
    "coveralls": "^3.1.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-qiwi": "^1.13.4",
    "jest": "^27.0.6",
    "microbundle": "^0.13.3",
    "mkdirp": "^1.0.4",
    "patch-package": "^6.4.7",
    "prettier": "^2.3.2",
    "prettier-config-qiwi": "^1.4.2",
    "rimraf": "^3.0.2",
    "tempy": "^1.0.1",
    "terser": "^5.7.1",
    "ts-jest": "^27.0.4",
    "typedoc": "^0.21.5",
    "typescript": "4.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antongolub/tsc-es2020-fix.git"
  },
  "keywords": [
    "tsc",
    "es2020",
    "tsc-es2020-fix"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed",
    "buildstamp.json"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/tsc-es2020-fix/issues"
  },
  "homepage": "https://github.com/antongolub/tsc-es2020-fix/#readme",
  "prettier": "prettier-config-qiwi"
}
